<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_bar_bg"
    android:gravity="center_vertical">
    <LinearLayout
        android:id="@+id/sideBarHomeLayout"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_height="35dip"
        android:layout_width="wrap_content">
        <ImageView
            android:src="@drawable/side_bar_home"
            android:layout_gravity="center"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_width="16dip"
            android:layout_height="16dip" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/sideBarOpenOrCloseLayout"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="30dip"
        android:layout_height="35dip" >
        <ImageView
            android:id="@+id/sideBarOpenOrCloseIV"
            android:src="@drawable/side_bar_closebar"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dip"/>
        <ImageView
            android:id="@+id/sideBarOpenOrCloseTipIV"
            android:layout_width="4.5dp"
            android:layout_height="4.5dp"
            android:src="@drawable/dcloud_point_f32720"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1.5dip"
            android:layout_marginTop="10dip"
            android:visibility="invisible"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/sideBarButtonsLayout"
        android:layout_toRightOf="@+id/sideBarHomeLayout"
        android:layout_toLeftOf="@+id/sideBarOpenOrCloseLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:gravity="center_vertical"
        android:layout_centerVertical="true">
        <LinearLayout
            android:id="@+id/sideBarFavoriteLayout"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/favoriteIcon"
                android:layout_gravity="center"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:src="@drawable/side_bar_favorite" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sideBarShareLayout"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/side_bar_share"
                android:layout_gravity="center"
                android:layout_width="16dip"
                android:layout_height="16dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sideBarReFreshLayout"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_gravity="center"
                android:src="@drawable/side_bar_refresh" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sideBarCloseLayout"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/side_bar_close"
                android:layout_gravity="center"
                android:layout_width="16dip"
                android:layout_height="16dip" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>